<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    tools:context=".PromocionesUsuarioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Selecciona una categoría para mostrar las promociones"
            />

        <Button
            android:id="@+id/btnC1"
            android:text="Aerolínea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/btnC2"
            android:text="Café"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            />

        <Button
            android:id="@+id/btnC3"
            android:text="Farmacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            />

        <Button
            android:id="@+id/btnC4"
            android:text="Deportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnC1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/btnC5"
            android:text="Cine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnC2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            />

        <Spinner
            android:id="@+id/spPromociones"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnC5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
        />

        <TextView
            android:id="@+id/tvTituloPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spPromociones"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:text="titulo de la promoción" />

        <TextView
            android:id="@+id/tvVigenciaPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTituloPromocion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:text="Vigencia" />

        <TextView
            android:id="@+id/tvTipoPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVigenciaPromocion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:text="Tipo de promoción" />

        <TextView
            android:id="@+id/tvEmpresaPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTipoPromocion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:text="Tipo de promoción" />

        <ImageView
            android:id="@+id/ivFotoPromocion"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tvEmpresaPromocion"
            android:layout_marginTop="50dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_centerHorizontal="true"
        />

        <!--
        <Button
            android:id="@+id/btnVerDetallePromocion"
            android:text="Ver detalle de la promoción"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tvEmpresaPromocion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
        -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navPromociones"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_bar"
            app:itemTextColor="@drawable/colors_menu"
            app:itemIconTint="@drawable/colors_menu"
            android:background="@drawable/border"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</ScrollView>